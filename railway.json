{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "setup": { "nixPkgs": ["nodejs_20_x"] },
        "install": { "cmds": ["yarn install --frozen-lockfile"] },
        "build": { "cmds": ["yarn build"] }
      },
      "start": { "cmd": "yarn start" }
    }
  },
  "deploy": {
    "startCommand": "yarn start",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
